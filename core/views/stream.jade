extends layout
block content
    div.userinfo
        -if (followed)
            a.item(href="/users/#{streamuser.id}/unfollow")
                .ui.mini.blue.button
                    i.minus.icon
                    | Unfollow
        -else
            a.item(href="/users/#{streamuser.id}/follow")
                .ui.mini.blue.button
                    i.plus.icon
                    | Follow
    div.container
        -if (photos.length == 0)
            #nophotos There seems to be nothing here...
        -else
            #streamList
                div.feed.photos
                    - for photo in photos
                        .p.both-5.photo
                            .ui.form.segment
                                .overlayed
                                    img(src=photo.imagePath)
                                    .overlay.t.opacity.fade.hide.unless.hovered
                                        .float.right
                                            .ui.mini.green.button
                                                i.share.icon
                                                | share
                                .text.muted.ui.two.column.grid
                                    .column
                                        .text.small.align.left
                                            a(href="/users/#{streamuser.id}")
                                                i.user.icon
                                                = streamuser.fullName
                                    .column
                                        .text.small.align.right
                                            = photo.fromNow()
                                    .text.small.align.center
                                        = photo.description || '(no description)'
            -if (prevPage >= 1)
                #prevPage
                    a(href="/feed?page=#{prevPage}") Previous Page
            -if (nextPage >= 1)
                #nextPage
                    | "  "
                    a(href="/feed?page=#{nextPage}") Next Page