extends layout
block content
    div.container
        -if (photos.length == 0)
            #nophotos Nothing new in your feed... maybe you should find some streams to follow!
        -else
            #feedList
                div.feed.photos
                    - for photo in photos
                        .p.both-5.photo
                            .ui.form.segment
                                .overlayed
                                    img(src=photo.imagePath)
                                    .overlay.t.opacity.fade.hide.unless.hovered
                                        .float.right
                                            .ui.mini.green.button
                                                i.share.icon
                                                | share
                                .text.muted.ui.two.column.grid
                                    .column
                                        .text.small.align.left
                                            a(href="/users/#{photo.userID}")
                                                i.user.icon
                                                = photo.fullName
                                    .column
                                        .text.small.align.right
                                            = moment(photo.createdAt).fromNow()
                                    .text.small.align.center
                                        = photo.description || '(no description)'
            -if (prevPage >= 1)
                #prevPage
                    a(href="/feed?page=#{prevPage}") Previous Page
            -if (nextPage >= 1)
                #nextPage
                    | "  "
                    a(href="/feed?page=#{nextPage}") Next Page